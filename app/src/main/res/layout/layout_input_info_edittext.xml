<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="44dp"

    >

    <RelativeLayout
        android:id="@+id/rl_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="10dp">


        <EditText
            android:id="@+id/et_input"
            style="@style/font_size_16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="3dp"
            android:layout_toLeftOf="@+id/ll_function_area"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/common_text_gray_color"
            android:textColorHint="@color/common_text_hint_gray"
            android:textCursorDrawable="@drawable/shape_common_edittext_cursor"
            tools:visibility="gone"


            />


        <TextView
            android:id="@+id/tv_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="1.3dp"
            android:layout_toLeftOf="@+id/ll_function_area"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/common_text_hint_gray"
            android:textSize="?attr/fontsize_16sp"
            tools:text="@string/login_password"
            tools:textSize="16sp"
            tools:visibility="visible" />

        <LinearLayout
            android:id="@+id/ll_function_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_cancel_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/icon_remove"
                android:scaleType="center"
                android:visibility="invisible"
                tools:visibility="visible" />


            <ImageView
                android:id="@+id/iv_pwd_input_show_or_hide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/icon_close_eye"
                android:visibility="gone"
                tools:visibility="visible" />


        </LinearLayout>


        <View
            android:id="@+id/v_input_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_gravity="center_vertical"
            android:background="@color/common_text_hint_gray"
            android:layout_marginTop="10dp"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>


</RelativeLayout>