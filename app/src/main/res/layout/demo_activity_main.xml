<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/container_content"
        android:visibility="visible"
        android:layout_margin="20dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/container_PeerCall"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="－－－1对1呼叫－－－"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView2"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="选择的呼叫对方"
            android:id="@+id/textViewLoginUser"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="20dp"/>

        <Spinner
            android:id="@+id/spinner_userlist"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:drawSelectorOnTop="true"
            android:layout_gravity="center" >
        </Spinner><!-- 定义一个下拉菜单-->


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发起呼"
            android:id="@+id/buttonStartPeerCall"
            android:layout_gravity="center"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="接收呼"
            android:id="@+id/buttonReceivePeerCall"
            android:layout_gravity="center"/>
    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/container_GroupCall"
        android:visibility="visible"
        android:layout_margin="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="－－－群呼－－－"
            android:id="@+id/textView3"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_gravity="center_horizontal" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发起呼"
            android:id="@+id/buttonStartGroupCall"
            android:layout_gravity="center"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="接收呼"
            android:id="@+id/buttonReceiveGroupCall"
            android:layout_gravity="center"/>




    </LinearLayout>


    </LinearLayout>
</LinearLayout>
