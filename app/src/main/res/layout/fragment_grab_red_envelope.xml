<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_70"
    >


    <RelativeLayout
        android:id="@+id/rl_red_envelope"
        android:layout_width="300dp"
        android:layout_height="451.4dp"
        android:layout_centerInParent="true"
        >

        <ImageView
            android:id="@+id/iv_bg_red_envelope_header"
            android:layout_width="300dp"
            android:layout_height="130.8dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/bg_grab_red_envelope_header" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:src="@mipmap/icon_logo_grab_red_envelope" />


        <ImageView
            android:id="@+id/iv_bg_red_envelope_body"
            android:layout_width="350dp"
            android:layout_height="320.625dp"
            android:layout_below="@+id/iv_bg_red_envelope_header"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/bg_grab_red_envelope_body"

            />

        <ImageView
            android:id="@+id/iv_giver_avatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_above="@+id/iv_bg_red_envelope_body"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-40dp"
            android:src="@mipmap/default_photo" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_giver_avatar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:text="Kaka"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:maxWidth="230dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:maxLines="2"
            android:ellipsize="end"
            />

        <TextView
            android:id="@+id/tv_name_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_centerHorizontal="true"
            android:alpha="0.6"
            android:text="@string/normal_red_envelope"
            android:textColor="@color/white"
            android:textSize="12sp" />


        <LinearLayout
            android:id="@+id/ll_money_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name_action"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            android:maxWidth="200dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            >


            <com.foreveross.atwork.component.textview.AutoAlignTextView
                android:id="@+id/tv_money_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="2222"
                android:textColor="@color/wallet_light_golden"
                android:textSize="50sp"
                android:maxWidth="200dp"
                android:maxLines="1"
                app:maxTextSize="50sp"
                app:minTextSize="12sp"
                />

            <TextView
                android:id="@+id/tv_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="金币"
                android:textColor="@color/wallet_light_golden"
                android:textSize="14sp" />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_congratulations_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="230dp"
            android:layout_below="@+id/ll_money_area"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="恭喜发财，大吉大利！恭喜发财，大吉大利！恭喜发财，大吉大利！"
            android:textColor="@color/wallet_light_golden"
            android:textSize="14sp"

            />


        <TextView
            android:id="@+id/tv_check_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="52dp"
            android:alpha="0.6"
            android:drawablePadding="3dp"
            android:drawableRight="@mipmap/icon_grab_red_envelope_check_detail_arrow"
            android:text="@string/check_grab_detail"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </RelativeLayout>


    <ImageView
        android:id="@+id/iv_cancel"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@mipmap/icon_grab_red_envelope_cancel"
        android:layout_below="@+id/rl_red_envelope"
        android:layout_centerHorizontal="true"
        />


</RelativeLayout>
