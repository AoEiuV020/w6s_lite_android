<?xml version="1.0" encoding="utf-8"?>
<!--因为在代码里涉及动态计算, 调整宽度时需要同时调整代码-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="48dp"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/select_user_head_icon"
        android:layout_width="@dimen/contact_avatar_size"
        android:layout_height="@dimen/contact_avatar_size"
        android:layout_centerInParent="true"
        android:scaleType="fitXY" />

    <FrameLayout
        android:id="@+id/select_user_head_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/select_user_head_icon"
        android:layout_marginLeft="-10dp"
        android:layout_toRightOf="@id/select_user_head_icon"
        android:padding="0dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@mipmap/icon_cancel" />

    </FrameLayout>
</RelativeLayout>