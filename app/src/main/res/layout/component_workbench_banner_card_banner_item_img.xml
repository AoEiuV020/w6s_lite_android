<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:padding="10dp"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/ivBanner"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:src="@mipmap/loading_app_top_advert_bg"
        android:layout_marginBottom="10dp"
        android:scaleType="centerCrop"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <com.foreveross.atwork.component.WorkplusSwitchCompat
            android:id="@+id/swPutaway"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:theme="@style/workplus_switch"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:id="@+id/tvTimeInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/common_expired"
            android:layout_toRightOf="@+id/swPutaway"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textColor="@color/common_text_color_999"
            android:textSize="12sp"
            android:visibility="gone"
            tools:visibility="visible"
            />



        <ImageView
            android:id="@+id/ivInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_workbench_banner_img_info"
            android:layout_gravity="right|center_vertical"
            android:layout_alignParentRight="true"
            />



    </RelativeLayout>

</LinearLayout>