<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingBottom="@dimen/common_message_content_divider"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/title_common_padding"
        android:layout_marginRight="@dimen/title_common_padding"
        android:background="@drawable/shape_pure_white_bg"
        android:orientation="vertical"
        >

        <com.foreverht.workplus.ui.component.textview.MediumBoldTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/common_text_color"
            android:text="@string/red_envelope_roll_back"
            tools:textSize="16sp"
            android:textSize="?attr/fontsize_16sp"
            android:layout_marginLeft="@dimen/title_common_padding"
            android:layout_marginTop="@dimen/title_common_padding"

            />
        
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/title_common_padding"
            tools:text="08-22-2018"
            android:textColor="@color/common_text_color_999"
            android:textSize="?attr/fontsize_12sp"
            tools:textSize="12sp"
            android:layout_marginTop="5dp"
            />


        <TextView
            android:id="@+id/tv_rollback_money_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/roll_money"
            android:textColor="@color/common_text_color_999"
            android:textSize="?attr/fontsize_14sp"
            tools:textSize="14sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/tv_money_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥ "
                android:textColor="@color/common_text_color"
                tools:textSize="50sp"
                android:textSize="?attr/fontsize_50sp"
                />

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textColor="@color/common_text_color"
                tools:textSize="50sp"
                android:textSize="?attr/fontsize_50sp"
                />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@drawable/shape_line_dashed"
            android:layout_marginTop="10.5dp"
            android:layerType="software"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="center_horizontal"
            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15.5dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/type"
                android:textColor="@color/common_text_color_999"
                android:textSize="?attr/fontsize_14sp"
                tools:textSize="14sp"
                android:layout_marginLeft="@dimen/title_common_padding"
                />

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/discussion_red_envelope"
                android:textColor="@color/common_text_color"
                android:textSize="?attr/fontsize_14sp"
                tools:textSize="14sp"
                />
        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="@dimen/title_common_padding"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/source"
                android:textColor="@color/common_text_color_999"
                android:textSize="?attr/fontsize_14sp"
                tools:textSize="14sp"
                android:layout_marginLeft="@dimen/title_common_padding"
                />

            <TextView
                android:id="@+id/tv_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="吃货群"
                android:textColor="@color/common_text_color"
                android:textSize="?attr/fontsize_14sp"
                tools:textSize="14sp"
                />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>