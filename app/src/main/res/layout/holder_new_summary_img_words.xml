<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_avatar_shape"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="8dp"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/chat_item_avatar"
            android:layout_width="@dimen/common_contact_item_img_size"
            android:layout_height="@dimen/common_contact_item_img_size"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/title_common_padding"
            android:contentDescription="@string/chat_item_avatar"
            android:layout_margin="16dp"
            android:scaleType="fitXY" />
        <TextView
            android:id="@+id/tvTitleName"
            android:layout_toRightOf="@id/chat_item_avatar"
            android:layout_toLeftOf="@id/tvTitleNTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="高科之家"/>
        <TextView
            android:id="@+id/tvTitleNTime"
            android:text="23:33"
            android:textSize = "14sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <com.foreveross.atwork.utils.img.round.RoundedImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/multi_image_article_cover"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:riv_corner_radius="8px"
        />
        <TextView
            android:id="@+id/tvContent"
            android:layout_below="@+id/multi_image_article_cover"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:background="@color/white"
            style="@style/font_size_16sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:padding="12dp"
            android:text="123"/>
    </RelativeLayout>
    <!-- 多图文中的图文消息 -->
    <com.foreveross.atwork.component.listview.InnerListView
        android:id="@+id/multi_image_article_list_view"
        android:layout_width="match_parent"
        android:cacheColorHint="#00000000"
        android:layout_height="match_parent">

    </com.foreveross.atwork.component.listview.InnerListView>
</LinearLayout>