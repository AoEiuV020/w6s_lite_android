<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222222">

    <com.foreveross.atwork.modules.image.component.ItemEnlargeImageView
        android:id="@+id/iv_img_show"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <com.foreveross.atwork.modules.image.component.ItemEnlargeImageView
        android:id="@+id/iv_sticker_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <View
        android:id="@+id/v_watermark_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rl_voice"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_centerInParent="true"
        android:visibility="gone">

        <com.foreveross.atwork.component.WaveView
            android:id="@+id/waveview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <LinearLayout
            android:id="@+id/ll_audio_play"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            android:background="@drawable/round_burn_mode_time_clock"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_audio_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_burn_audio" />

            <TextView
                android:id="@+id/tv_audio_time"
                style="@style/font_size_14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="22"
                android:textColor="@color/burn_mode_message_detail_text" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_audio_play_tip"
            style="@style/font_size_14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/ll_audio_play"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textColor="#999999" />


    </RelativeLayout>


    <TextView
        android:id="@+id/tv_burn_text"
        style="@style/font_size_21sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="hello world"
        android:textColor="@color/white"
        android:visibility="gone" />


    <TextView
        android:id="@+id/tv_clock"
        style="@style/font_size_20sp"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:background="@drawable/round_burn_mode_time_clock"
        android:gravity="center"
        android:text="6"
        android:textColor="@color/burn_mode_message_detail_text" />

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:src="@mipmap/icon_burn_back" />


    <View
        android:id="@+id/v_mask_layer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:visibility="gone" />

</RelativeLayout>