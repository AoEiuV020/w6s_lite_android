<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_voice_area"
    android:layout_width="160dp"
    android:layout_height="160dp"
    android:layout_centerHorizontal="true">

    <com.foreveross.atwork.component.WaveView
        android:id="@+id/waveView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />


    <ImageView
        android:id="@+id/ivVoiceState"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:src="@mipmap/icon_voice_search_btn" />


    <TextView
        android:id="@+id/tvVoiceStateGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/press_talking"
        android:layout_marginTop="8dp"
        android:textSize="14sp"
        android:textColor="@color/common_text_color_999"
        android:layout_below="@+id/ivVoiceState"
        android:layout_centerHorizontal="true"

        />


</RelativeLayout>
