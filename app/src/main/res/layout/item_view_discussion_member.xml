<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivAvatar"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:maxEms="3"
        android:text="张三"
        android:textColor="@color/common_text_color"
        style="@style/font_size_16sp"
        app:layout_constraintTop_toBottomOf="@+id/ivAvatar"
        app:layout_constraintLeft_toLeftOf="@+id/ivAvatar"
        app:layout_constraintRight_toRightOf="@+id/ivAvatar"
        />


    <Space
        android:id="@+id/spaceRedRemove"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/ivAvatar"
        android:background="@color/yellow"
        android:layout_marginLeft="10dp"
        />

    <ImageView
        android:id="@+id/ivRemoveMember"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/icon_cancel"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/spaceRedRemove"
        />




</androidx.constraintlayout.widget.ConstraintLayout>