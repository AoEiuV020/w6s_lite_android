<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_page_bg"
    android:layout_marginTop="8dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="15dp">
        <include
            android:id="@+id/favorite_select_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            layout="@layout/view_favorite_selector" />

        <TextView
            android:id="@+id/favorite_voice_text"
            style="@style/font_size_13sp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_history_item_voice_bg"
            android:drawableLeft="@mipmap/icon_history_item_voice_play"
            android:gravity="center_vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:textColor="@color/common_text_color"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="10dp"/>

        <include
            layout="@layout/view_favorite_source"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_below="@id/favorite_voice_text"/>

    </RelativeLayout>


</RelativeLayout>