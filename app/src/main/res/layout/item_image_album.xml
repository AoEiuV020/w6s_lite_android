<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="82dp"
    android:background="@drawable/bg_item_common_selector">


    <ImageView
        android:id="@+id/album_image"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/album_image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/image_album_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Camera"
            android:textColor="#000000"
            style="@style/font_size_16sp" />


        <TextView
            android:id="@+id/image_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/total_page"
            android:textColor="@android:color/darker_gray"
            style="@style/font_size_13sp" />

    </LinearLayout>
</RelativeLayout>