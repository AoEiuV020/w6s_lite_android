<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?attr/adaptive_height_50dp"
    tools:layout_height="50dp"
    android:background="@color/white"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <ImageView
        android:id="@+id/iv_vpn_selectd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@mipmap/icon_selected_tick"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/iv_vpn_setting"
        android:layout_toRightOf="@+id/iv_vpn_selectd"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_vpn_name"
            style="@style/font_size_14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_vpn_selectd"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="国内线路2" />

        <TextView
            android:id="@+id/tv_vpn_label"
            style="@style/font_size_14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:maxLines="1"
            android:text="(openVpn连接服务)"
            android:textColor="@color/common_text_color_666"
            android:visibility="visible" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_vpn_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:background="@mipmap/icon_vpn_setting"
        android:visibility="gone"
        tools:visibility="visible" />

    <View
        android:id="@+id/iv_line_item_common"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_11"
        android:layout_marginRight="@dimen/dp_11"
        android:background="@color/common_line_color" />


</RelativeLayout>