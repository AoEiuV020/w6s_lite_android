<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/flContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/ivAdminAction"
        />

    <ImageView
        android:id="@+id/ivAdminAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_workbench_admin_action_more"
        android:layout_weight="1"
        android:background="#E0F1FF"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/flContent"
        android:layout_alignTop="@+id/flContent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="visible"
        tools:visibility="visible"
        />


</RelativeLayout>