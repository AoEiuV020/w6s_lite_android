<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/shape_multipart_item"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_icon_bing"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:src="@mipmap/icon_normal_bing" />

    <TextView
        android:id="@+id/tv_title_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_icon_bing"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/iv_icon_bing"
        android:text="来自雪诺的必应消息来自雪诺的必应消息来自雪诺的必应消息来自雪诺的必应消息"
        android:layout_marginRight="40dp"
        android:textSize="14sp"
        android:textColor="@color/light_black"
        android:singleLine="true"
        android:ellipsize="end"
        />

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title_label"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/iv_icon_bing">

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxxxxx"
            android:textColor="@color/light_black"
            android:textSize="13sp"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/tv_voice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/shape_message_bing_bg"
            android:drawableLeft="@mipmap/icon_bing_voice_play"
            android:drawablePadding="15dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="3"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="50dp"
            android:paddingTop="5dp"
            android:text="6"
            android:textSize="13sp"
            android:textColor="@color/light_black"
            android:visibility="gone" />

    </FrameLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fl_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="5dp"
        android:text="@string/click_read_detail"
        android:textColor="@color/common_blue_bg" />

    <ImageView
        android:id="@+id/iv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_bing_cancel"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        />

</RelativeLayout>