<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >


    <ImageView
        android:id="@+id/ivCover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/lite_bind_cover"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="200dp"
        />


    <TextView
        android:id="@+id/tvBindNotifyContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ivCover"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="绑定企业三国演义"
        android:layout_marginTop="34dp"
        android:textSize="14sp"
        android:textColor="@color/common_text_color"
        android:background="@drawable/shape_common_white"
        android:gravity="center_vertical"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"

        />


    <TextView
        android:id="@+id/tvOK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ok"
        android:background="@drawable/shape_common_blue"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:paddingLeft="46dp"
        android:paddingRight="46dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tvBindNotifyContent"
        app:layout_constraintLeft_toLeftOf="@+id/tvBindNotifyContent"
        android:layout_marginTop="40dp"
        />


    <TextView
        android:id="@+id/tvCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        android:background="@drawable/shape_common_gray"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:paddingLeft="46dp"
        android:paddingRight="46dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tvBindNotifyContent"
        app:layout_constraintRight_toRightOf="@+id/tvBindNotifyContent"
        android:layout_marginTop="40dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>