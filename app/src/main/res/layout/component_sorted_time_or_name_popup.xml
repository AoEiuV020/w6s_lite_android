<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/transparent_70"
    android:id="@+id/view_layout">

    <RelativeLayout
        android:id="@+id/sorted_by_time_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/sorted_time_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/sort_by_time_unselected"/>
        <TextView
            android:id="@+id/sorted_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/sorted_time_icon"
            android:layout_marginLeft="8dp"
            style="@style/font_size_12sp"
            android:text="@string/sorted_by_time"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/sorted_time_selected_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/sort_selected"
            android:visibility="gone"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/common_line_color"/>

    <RelativeLayout
        android:id="@+id/sorted_by_name_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/sorted_name_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/sort_by_name_unselected"/>
        <TextView
            android:id="@+id/sorted_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/sorted_name_icon"
            android:layout_marginLeft="8dp"
            style="@style/font_size_12sp"
            android:text="@string/sorted_by_name"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/sorted_name_selected_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/sort_selected"
            android:visibility="gone"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/common_line_color"/>
</LinearLayout>