<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/navi_layout"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/common_blue_bg"
                android:tag="c1">


    <!-- 左边的APP图标 -->
    <com.foreveross.atwork.modules.app.component.WebTitleBarRightButtonView
        android:id="@+id/navi_left_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/app_icon"
        android:padding="12dp"
        android:scaleType="center"/>

    <TextView
        android:id="@+id/navi_left_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@id/navi_left_button"
        style="@style/font_size_14sp"/>

    <com.foreveross.atwork.modules.app.component.WebTitleBarRightButtonView
        android:id="@+id/navi_right_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:scaleType="center"/>

    <TextView
        android:id="@+id/navi_right_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@id/navi_right_button"
        style="@style/font_size_14sp"/>


    <!-- 名称，当天聊天界面的名称 -->
    <TextView
        android:id="@+id/navi_middle_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="#FFFFFF"
        style="@style/font_size_20sp"
        />

</RelativeLayout>