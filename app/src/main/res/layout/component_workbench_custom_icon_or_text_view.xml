<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/flCustomIconOrText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true">

    <ImageView
        android:id="@+id/ivCustomIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/appstore_loading_icon_size"
        android:visibility="gone"
        tools:visibility="visible" />

    <com.foreverht.workplus.ui.component.textview.MediumBoldTextView
        android:id="@+id/tvCustomText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxWidth="100dp"
        android:singleLine="true"
        android:textColor="@color/common_blue_bg"
        android:textSize="?attr/fontsize_14sp"
        tools:textSize="14sp"
        android:visibility="gone"
        tools:text="这是个控件" />

</FrameLayout>
