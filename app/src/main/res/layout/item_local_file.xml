<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--类似于Expandlistview的头部一样 -->
    <View
        android:id="@+id/item_file_topview"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#f0f0f0"
        android:visibility="gone" />

    <include layout="@layout/view_common_divider" />

    <RelativeLayout
        android:id="@+id/item_file_layout"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="@drawable/bg_item_common_selector">

        <ImageView style="@style/icon_arrow_dark" />

        <ImageView
            android:id="@+id/item_file_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp" />
        <!--
            android:background="@mipmap/icon_phone_ram"-->

        <TextView
            android:id="@+id/item_file_name"
            style="@style/font_size_18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@id/item_file_icon"
            android:text="@string/account_name"
            android:textColor="#333333" />
    </RelativeLayout>

</LinearLayout>