<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_home_tab_title"
        style="@style/font_size_tiny_12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:drawablePadding="2dp"
        android:gravity="center"
        android:scaleType="matrix"
        android:text="Tab1111111111111"
        android:textColor="@color/main_botton_text_color" />

    <ImageView
        android:id="@+id/newMessageTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="28dp"
        android:layout_marginTop="5dp"
        android:background="@mipmap/icon_chat_dot" />


    <com.foreveross.atwork.component.NewMessageView
        android:id="@+id/item_home_tab_plus_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="15dp"
         />
</RelativeLayout>