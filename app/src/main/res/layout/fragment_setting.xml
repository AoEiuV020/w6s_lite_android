<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_page_bg">

    <include
        android:id="@+id/setting_title"
        layout="@layout/title_bar_common" />

    <ListView
        android:id="@+id/setting_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/setting_title"
        android:background="#ffffff" />

    <Button
        android:id="@+id/setting_logout_tv"
        style="@style/font_size_18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setting_list"
        android:layout_margin="30dp"
        android:background="@drawable/round_rect_red"
        android:gravity="center"
        android:padding="10dp"
        android:tag="c10"
        android:text="@string/logout"
        android:textColor="#fff" />

</RelativeLayout>