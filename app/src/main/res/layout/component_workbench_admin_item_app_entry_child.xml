<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="66dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"

    >



    <ImageView
        android:id="@+id/ivAppCover"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginLeft="50dp"
        android:src="@mipmap/default_app"
        android:layout_toRightOf="@+id/ivRootNodeArrow"
        android:layout_centerVertical="true"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvCover"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/tvSelect"
        android:layout_toRightOf="@+id/ivAppCover"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:ellipsize="middle"
            android:singleLine="true"
            android:textColor="@color/common_text_color"
            android:textSize="16sp"
            tools:text="客户端部门" />

        <TextView
            android:id="@+id/tvDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="@string/admin_set_app_scope"
            android:textColor="@color/common_blue_bg"
            android:textSize="12sp"
            android:visibility="gone"
            tools:visibility="visible" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/icon_selected"
        android:visibility="gone"
        tools:visibility="visible"
        />


    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/common_bg_gray"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>