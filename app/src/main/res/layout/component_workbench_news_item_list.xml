<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">


    <ImageView
        android:id="@+id/ivCover"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/fail_cover_square_size"
        android:layout_alignParentLeft="true"
        />

    <RelativeLayout
        android:id="@+id/rlContentArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/ivCover">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/common_text_color"
            android:textSize="?attr/fontsize_14sp"
            tools:textSize="14sp"
            android:gravity="top"
            tools:text="细数麦当劳那些“奇特”餐厅。" />

        <TextView
            android:id="@+id/tvContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTitle"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/ivArrow"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/common_text_color_999"
            android:textSize="?attr/fontsize_12sp"
            tools:textSize="12sp"
            tools:text="自1955年全球第一家麦当劳餐厅在美国伊利诺伊州芝加哥创立。截至2017年底，" />


        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvContent"
            android:layout_marginTop="5dp"
            android:textColor="@color/common_text_color_999"
            android:textSize="?attr/fontsize_12sp"
            tools:textSize="12sp"
            tools:text="2018月8月8日2018月8月8日2018月8月8日"
            android:maxWidth="160dp"
            android:singleLine="true"
            android:ellipsize="end"
            />

        <TextView
            android:id="@+id/tvSource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvContent"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/tvTime"
            android:textColor="@color/common_text_color_999"
            android:textSize="?attr/fontsize_12sp"
            tools:textSize="12sp"
            android:singleLine="true"
            android:ellipsize="end"
            tools:text="消息来源消息来源消息来源消息来源" />


    </RelativeLayout>
</RelativeLayout>