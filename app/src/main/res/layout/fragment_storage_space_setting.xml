<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg_gray"
    android:orientation="vertical">

    <include
        android:id="@+id/v_title_bar_common"
        layout="@layout/title_bar_common" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/history_data"
                android:textColor="@color/common_text_color"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/clear_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/clearing"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:background="@drawable/shape_setting_gray"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/computing_history_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/being_calculated"
            android:layout_marginTop="5dp"
            android:textColor="#3399FF"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_clean_history_record_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="@string/tip_about_clear_history_messages"
            android:textColor="@color/common_text_color_999"
            android:textSize="14sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="13dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/local_file"
                android:textColor="@color/common_text_color"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/clear_local_file"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/clearing"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:background="@drawable/shape_setting_gray"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/computing_local_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/being_calculated"
            android:layout_marginTop="5dp"
            android:textColor="#3399FF"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="@string/tip_about_clear_local_file"
            android:textColor="@color/common_text_color_999"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="13dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/cache"
                android:textColor="@color/common_text_color"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/clear_browser_cache"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/clearing"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:background="@drawable/shape_setting_gray"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="@string/tip_about_clear_browser_cache"
            android:textColor="@color/common_text_color_999"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="13dp">

        <TextView
            android:id="@+id/clear_all_cache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/clean_up_all_data"
            android:layout_margin="5dp"
            android:textColor="@color/common_text_color_999"
            android:textSize="17sp" />
    </LinearLayout>

</LinearLayout>