<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/favorite_srouce"
        style="@style/font_size_12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/common_text_color_999"
        android:singleLine="true"
        android:lines="1"
        android:ellipsize="end"
        android:maxLength="30"
        android:maxWidth="180dp"
        android:layout_alignParentLeft="true"
        android:layout_marginEnd="10dp"/>


        <TextView
            android:id="@+id/favorite_date"
            style="@style/font_size_12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/common_text_color_999"
            android:layout_toEndOf="@id/favorite_srouce"
            android:lines="1"
            android:layout_marginEnd="7dp"/>

        <ImageView
            android:id="@+id/favorite_tag_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/favorite_date"
            android:background="@mipmap/icon_favorite"/>

</RelativeLayout>