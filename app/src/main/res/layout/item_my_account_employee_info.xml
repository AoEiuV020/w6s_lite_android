<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/contact_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:layout_marginBottom="12dp"
        tools:background="@color/pink_blue">
        <ImageView
            android:id="@+id/my_account_info_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@mipmap/icon_arrow_gray"
            android:visibility="gone" />


        <ImageView
            android:id="@+id/my_account_info_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="38dp"
            android:layout_marginTop="14dp"
            android:scaleType="fitXY"
            android:src="@mipmap/default_photo"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/icon_action_area"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/my_account_info_key"
                style="@style/font_size_14sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:gravity="left"
                android:lineSpacingExtra="0sp"
                android:textColor="@color/common_text_color_999"
                tools:text="标题" />

            <TextView
                android:id="@+id/my_account_info_value"
                style="@style/font_size_14sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:ellipsize="end"
                android:gravity="left"
                android:textColor="@color/common_text_color"
                tools:text="内容" />
        </LinearLayout>
    </RelativeLayout>
    <ImageView
        android:id="@+id/v_common_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:background="@color/common_line_color"
        android:tag="c18"
        android:visibility="gone"/>
</LinearLayout>