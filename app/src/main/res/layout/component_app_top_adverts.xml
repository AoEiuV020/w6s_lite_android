<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.foreveross.atwork.modules.app.component.AutoScrollViewPager
        android:id="@+id/vp_auto_scroll"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:visibility="gone"
        tools:visibility="visible"
        />

    <LinearLayout
        android:id="@+id/ll_gallery_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/vp_auto_scroll"
        />

    <TextView
        android:id="@+id/tv_set_banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/admin_set_banner"
        android:textColor="@color/common_blue_bg"
        android:textSize="12sp"
        android:background="@drawable/shape_admin_set_banner_bg"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        tools:visibility="visible"
        />

    <include
        android:id="@+id/app_title_bar"
        layout="@layout/title_bar_main_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_below="@+id/vp_auto_scroll"

        />

</RelativeLayout>