<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/contact_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:layout_marginBottom="12dp">

        <LinearLayout
            android:id="@+id/icon_action_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/send_sms_to"
                style="@style/font_size_14sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="14dp"
                android:text="@string/sms"
                android:textColor="@color/common_blue_bg"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/copy"
                style="@style/font_size_14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/copy_item"
                android:textColor="@color/common_blue_bg"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/icon_action_area"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/contact_info_key"
                style="@style/font_size_14sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:gravity="left"
                android:lineSpacingExtra="0sp"
                android:textColor="@color/common_text_color_999"
                tools:text="标题" />

            <TextView
                android:id="@+id/contact_info_value"
                style="@style/font_size_14sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:ellipsize="end"
                android:gravity="left"
                android:lineSpacingExtra="5sp"
                android:textColor="@color/common_text_color"
                tools:text="内容" />
        </LinearLayout>
    </RelativeLayout>


    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1px"-->
        <!--android:background="#DCDCDC" />-->


</LinearLayout>