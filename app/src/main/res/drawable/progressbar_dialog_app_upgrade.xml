<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 背景图片 -->
    <item android:id="@android:id/background">
        <clip>
            <shape>
                <corners android:radius="0dip" />

                <gradient
                    android:endColor="#ffc5c5c5"
                    android:startColor="#ffc5c5c5" />
            </shape>
        </clip>
    </item>
    <!-- 进度图片 -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="0dip" />

                <gradient
                    android:endColor="#ff3785c6"
                    android:startColor="#ff3785c6" />
            </shape>
        </clip>
    </item>

</layer-list>